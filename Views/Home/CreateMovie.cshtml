@model lab_1_asp_net.Models.Movie
@using lab_1_asp_net.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Texts> Localizer

<h2>@Localizer["Створення нового фільму"]</h2>

<form asp-action="CreateMovie">
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name " class="control-label"></label>
        <input asp-for="Name " class="form-control" />
        <span asp-validation-for="Name " class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description " class="control-label"></label>
        <input asp-for="Description " class="form-control" />
        <span asp-validation-for="Description " class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price " class="control-label"></label>
        <input asp-for="Price " class="form-control" />
        <span asp-validation-for="Price " class="text-danger"></span>
    </div>
    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
    <div class="form-group">
        <input type="submit" value=@Localizer["Створити"] class="btn btn-primary" />
    </div>
</form>