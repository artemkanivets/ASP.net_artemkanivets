@model IEnumerable<lab_1_asp_net.Models.Movie>
@using lab_1_asp_net.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Texts> Localizer

<h2>@Localizer["Фільми"]</h2>

<p>
    <a asp-action="CreateMovie">@Localizer["Додати новий фільм"]</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>@Localizer["Назва"]</th>
            <th>@Localizer["Опис"]</th>
            <th>@Localizer["Ціна"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Name</td>
                <td>@movie.Description</td>
                <td>@movie.Price</td>
                <td>
                    <a asp-action="EditMovie" asp-route-id="@movie.Id">@Localizer["Редагувати"]</a> |
                    <a asp-action="DeleteMovie" asp-route-id="@movie.Id">@Localizer["Видалити"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
