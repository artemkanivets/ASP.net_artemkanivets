@model lab_1_asp_net.Models.User
@using lab_1_asp_net.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Texts> Localizer

<h2>@Localizer["Видалення користувача"]</h2>

<p>@Localizer["Ви впевнені, що хочете видалити цього користувача?"]</p>

<div>
    <h4>@Localizer["Інформація про користувача:"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Localizer["Повне ім'я:"]</dt>
        <dd class="col-sm-10">@Model.FullName</dd>


    </dl>

    <form asp-action="DeleteUser" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value=@Localizer["Підтвердити видалення"] class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">@Localizer["Скасувати"]</a>
        </div>
    </form>
</div>