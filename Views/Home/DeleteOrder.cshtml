@model lab_1_asp_net.Models.Order
@using lab_1_asp_net.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Texts> Localizer

<h2 class="my-4">@Localizer["Видалення замовлення"]</h2>

<p>@Localizer["Ви впевнені, що хочете видалити це замовлення?"]</p>

<div>
    <h4>@Localizer["Інформація про замовлення"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Localizer["Назва фільму:"]</dt>
        <dd class="col-sm-10">@Model.MovieName</dd>
    </dl>

    <form asp-action="DeleteOrder" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value=@Localizer["Підтвердити видалення"] class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">@Localizer["Скасувати"]</a>
        </div>
    </form>
</div>
